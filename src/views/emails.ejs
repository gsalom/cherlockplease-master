<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %></title>
  <%- include("partials/head") %>
</head>

<body>
  <!-- HEADER -->
  <%- include("partials/navigation") %>
  <!-- My Content -->
  <main class="container pt-2 text-center justify-content-center align-items-center vh-100" style="auto">
    <section>
      <h2 class="display-1">Revisions no realitzades</h2>
      <h1 class="display-5"><%= dataini.toLocaleDateString('es-ES') %> -- <%= datafi.toLocaleDateString('es-ES') %></h1>
      <table class="table table-bordered fons" width="100%" cellspacing="0">
        <tr>
          <th>Data</th>
          <th>Hora</th>
          <th>Aula</th>
          <th>Grup</th>
          <th>Professor//a</th>
          <th>Email</th>
        </tr>
        <% data.forEach(function(dat){ %>
        <tr>
          <td><%= dat.data_rev %></td>
          <td><%= dat.hora %></td>
          <td><%= dat.nom %></td>
          <td><%= dat.grup %></td>
          <td><%= dat.profe %></td>
          <% if (dat.hies==0) { %>
          <td><a target="_blank"
              href=<%= "./mail?email="+dat.email %>+<%= "&data="+dat.data_rev %>+<%="&hora="+dat.hora %>+<%="&aula="+dat.nom %>+<%="&grup="+dat.grup %>+<%="&profe="+encodeURI(dat.profe) %>><%= dat.email %></a>
          </td>
          <%} else { %>
          <td><%= dat.email %></td>
          <%}}) %>
        </tr>
      </table>
    </section>
  </main>
</body>

</html>